FROM rasa/rasa:latest

USER root
WORKDIR /app
COPY . .

RUN rasa train

# Set environment variable to suppress SQLAlchemy warning
ENV SQLALCHEMY_SILENCE_UBER_WARNING=1

USER 1001

# Use ENTRYPOINT with CMD
CMD ["rasa", "run", "--enable-api", "--cors", "*", "--port", "5005", "--endpoints", "endpoints.yml"]